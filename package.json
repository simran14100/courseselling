{
  "name": "coursewebmok",
  "version": "1.0.0",
  "description": "Backend for CourseWebmok application",
  "main": "./backend/index.js",
  "scripts": {
    "start": "cd backend && node index.js",
    "server": "nodemon backend/index.js",
    "render-start": "node server.js",
    "client": "cd frontend && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-all": "npm install && cd frontend && npm install",
    "build": "cd frontend && npm install --production=false && npm run build",
    "render-build": "npm run install-all && npm run build && node server.js"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.8.0",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-fileupload": "^1.5.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "express-xss-sanitizer": "^2.0.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.6",
    "nodemailer-express-handlebars": "^7.0.0",
    "winston": "^3.17.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "eslint-plugin-react-hooks": "^7.0.1",
    "nodemon": "^3.0.1"
  }
}
